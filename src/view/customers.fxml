<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="600.0" prefWidth="1015.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Customers">
    <TableView fx:id="custTable" layoutY="104.0" prefHeight="433.0" prefWidth="1015.0">
        <columns>
            <TableColumn fx:id="custIdCol" prefWidth="50.0" text="Cust. Id"/>
            <TableColumn fx:id="nameCol" prefWidth="140.0" text="Customer Name"/>
            <TableColumn fx:id="addressCol" prefWidth="160.0" text="Address"/>
            <TableColumn fx:id="postalCol" minWidth="18.0" text="Postal"/>
            <TableColumn fx:id="stateCol" prefWidth="100.0" text="Division"/>
            <TableColumn fx:id="phoneCol" prefWidth="110.0" text="Phone"/>
            <TableColumn fx:id="createdAtCol" prefWidth="135.0" text="Created At"/>
            <TableColumn fx:id="updatedAtCol" prefWidth="135.0" text="Updated At"/>
            <TableColumn fx:id="updatedByCol" minWidth="0.0" prefWidth="105.0" text="Updated By"/>
        </columns>
    </TableView>
    <Label layoutX="14.0" layoutY="14.0" text="Customers">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    <Button layoutX="549.0" layoutY="72.0" mnemonicParsing="false" onAction="#handleSchedule" text="Schedule"/>
    <Button layoutX="14.0" layoutY="561.0" mnemonicParsing="false" text="Reports"/>
    <Button layoutX="124.0" layoutY="561.0" mnemonicParsing="false" onAction="#handleAddCustomer" text="Add Customer"/>
    <Button layoutX="252.0" layoutY="561.0" mnemonicParsing="false" onAction="#handleModifyCustomer"
            text="Modify Customer"/>
    <Button layoutX="396.0" layoutY="561.0" mnemonicParsing="false" onAction="#handleDeleteCustomer"
            text="Delete Customer" textFill="#f80000"/>
    <Button layoutX="937.0" layoutY="561.0" mnemonicParsing="false" onAction="#handleLogout" text="Logout"/>
</AnchorPane>
